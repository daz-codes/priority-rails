<%= turbo_frame_tag dom_id(@task) do %>
  <%= form_with(model: @task, id: :edit_task_form) do |form| %>
    <% if @task.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% @task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form.text_field :description %>
    <div class="actions">
        <%= button_tag(type: "submit", class: "task_button") do %>
          <i class="fa-solid fa-check"></i>
        <% end %>
        <%= link_to "<i class='fa-solid fa-xmark'></i>".html_safe, @task.list, class: "task_button" %>
  </div>
  <% end %>
<% end %>
