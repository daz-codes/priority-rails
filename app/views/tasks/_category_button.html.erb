<%= form_with model: task, class: "inline-block", data: {controller: "category-toggle"} do |f| %>
    <%= f.select :category,
    task.list.categories.pluck(:name),
    { selected: task.category },
    class: "text-xs border border-gray-300 rounded p-1 cursor-pointer",
    include_blank: false,
    data: {
        action: "change->category-toggle#submit"
    } %>
<% end %>
