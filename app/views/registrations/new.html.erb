<div class="max-w-md mx-auto py-8">
  <div class="text-center mb-8">
    <%= logo :large %>
    <p class="text-lg text-gray-500 mt-2 mb-6">Create your account</p>
  </div>

  <div class="bg-white rounded-2xl border border-gray-200 p-6 mb-6">
    <%= form_with model: @user, url: registration_path, class: "space-y-3" do |f| %>
      <% if @user.errors.any? %>
        <div class="text-sm text-red-500 bg-red-50 rounded-lg px-4 py-2.5"><%= @user.errors.full_messages.to_sentence %></div>
      <% end %>

      <%= f.email_field :email_address, placeholder: "Email address", class: "w-full px-4 py-2.5 border border-gray-200 rounded-lg text-sm focus:outline-none focus:border-sky-400" %>
      <%= f.password_field :password, placeholder: "Choose a password", class: "w-full px-4 py-2.5 border border-gray-200 rounded-lg text-sm focus:outline-none focus:border-sky-400" %>
      <%= f.submit "Create Account", class: "w-full py-2.5 rounded-full bg-sky-400 text-white font-semibold cursor-pointer hover:bg-sky-500 transition-all duration-100 text-sm" %>
    <% end %>
  </div>

  <div class="text-center text-sm text-gray-400">
    <p class="m-0">Already have an account? <%= link_to "Sign in", login_path, class: "text-sky-500 font-semibold no-underline hover:text-sky-600" %></p>
  </div>
</div>
