<div class="col-start-1 sm:col-start-2">
<%= logo :large %>
<h1 class="text-2xl font-heading font-bold mb-4">Sign up</h1>

<%= form_with model: @user, url: registration_path, class: "space-y-4" do |f| %>
  <%= tag.div(@user.errors.full_messages.to_sentence, class: "text-red-600") if @user.errors.any? %>

  <div>
    <%= f.label :email_address, class: "block mb-1" %>
    <%= f.email_field :email_address, class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <div>
    <%= f.label :password, class: "block mb-1" %>
    <%= f.password_field :password, class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <%= f.submit "Sign up", class: "bg-sky-400 text-white border-sky-400 px-4 py-2 rounded-full cursor-pointer hover:bg-sky-500 transition-all duration-100 font-semibold" %>
<% end %>
</div>
