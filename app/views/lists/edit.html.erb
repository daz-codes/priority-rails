<% content_for :title, "Editing list" %>

<div class="col-start-1 sm:col-start-2">
    <h1 class="text-2xl font-heading font-bold mb-4">Editing List</h1>

    <%= render "form", list: @list %>

    <%= form_with url: add_user_list_path(@list), method: :post, local: true, class: "mt-6 space-y-2" do |form| %>
    <%= form.label :email_address, "Add user by email", class: "block mb-1" %>
    <%= form.email_field :email_address, required: true, class: "w-full p-2 border border-gray-300 rounded" %>
    <%= form.submit "Add User", class: "bg-brand-blue text-white border-brand-blue px-4 py-2 rounded cursor-pointer hover:bg-blue-700" %>
    <% end %>
</div>
