<% content_for :title, "Welcome" %>
<div class="text-center pt-8">
  <h1 class="text-3xl sm:text-5xl font-heading m-0 mb-2">
    <span class="list-title">Welcome back!</span>
  </h1>
  <p class="text-lg text-gray-600 mt-4"><%= Current.user.name %></p>

  <% if @completed_this_week > 0 %>
    <p class="text-xl mt-6">
      This week you've completed
      <span class="font-bold text-emerald-500"><%= @completed_this_week %></span>
      <%= "task".pluralize(@completed_this_week) %>!
    </p>
  <% else %>
    <p class="text-xl text-gray-500 mt-6">No tasks completed this week yet â€” you've got this!</p>
  <% end %>
</div>
