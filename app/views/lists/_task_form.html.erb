<%= form_with(model: [@list,@task], id: :new_task_form, class: "flex w-full sm:w-4/5 mx-auto mb-6") do |form| %>
    <%= form.text_field :description, autofocus: true, placeholder: "What do you need to do?", class: "flex-1 min-w-0 p-2 border border-gray-300 border-r-0 rounded-l-xl outline-none text-base" %>
    <%= form.submit "ADD", class: "w-20 p-2 border border-sky-400 border-l-0 rounded-r-xl bg-sky-400 text-white cursor-pointer hover:bg-sky-500 transition-all duration-100 font-semibold" %>
<% end %>
