<%= form_with(model: [@list,@task], id: :new_task_form, class: "flex w-full sm:w-4/5 mx-auto mb-6") do |form| %>
    <%= form.text_field :description, placeholder: "What do you need to do?", class: "flex-1 min-w-0 py-2 pl-4 pr-2 border border-border-input border-r-0 rounded-l-full outline-none text-base bg-input-bg" %>
    <%= form.submit "ADD", class: "w-20 p-2 border border-sky-300 border-l-0 rounded-r-full bg-sky-100 text-sky-700 cursor-pointer hover:bg-sky-200 transition-all duration-100 font-semibold dark:bg-sky-900 dark:text-sky-200 dark:border-sky-700 dark:hover:bg-sky-800" %>
<% end %>
