<% content_for :title, @list.name %>
<%= turbo_refreshes_with method: :morph, scroll: :preserve %>
<%= turbo_stream_from @list %>

<%= render "title" %>
<% unless @priority %>
    <%= render "tabs" %>
    <%= render "task_form" %>
<% end %>
<% if @tasks.any? %>
    <%= tag.ul id: "tasks", data: (@filter ? {} : { controller: "sortable tasks", sortable_url_value: sort_tasks_path }) do %>
        <%= render @tasks %>
    <% end %>
<% else %>
  <p id="tasks" class="text-center"> No tasks yet!</p>
<% end %>
