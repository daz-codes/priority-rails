<% content_for :title, @list.name %>
<%= turbo_refreshes_with method: :morph, scroll: :preserve %>
<%= turbo_stream_from @list %>

<h1 class="list_name"><%= @list.name %></h1>
<div id="list_actions">
    <%= link_to "PR!OR!TRY!",list_path(@list, list: "priority"),class: class_names("filter_tab", active: @filter == "priority") %>
    <%= link_to "Active", list_path(@list), class: class_names("filter_tab", active: @filter == nil) %>
    <%= link_to "Completed", list_path(@list, list: "completed"), class: class_names("filter_tab", active: @filter == "completed") %>
    <%= link_to "Today", list_path(@list, list: "today"), class: class_names("filter_tab", active: @filter == "today") %>
    <%= link_to "Snoozed", list_path(@list, list: "snoozed"), class: class_names("filter_tab", active: @filter == "snoozed") %>
</div>
<% unless @priority %>
    <%= form_with(model: [@list,@task], id: :new_task_form) do |form| %>
    <% if @task.errors.any? %>
        <div style="color: red">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
            <% @task.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>
        <%= form.text_field :description %>
        <%= form.submit "ADD" %>
    <% end %>
<% end %>
<% if @tasks.any? %>
    <ul id="tasks" data-controller="sortable tasks" data-sortable-url-value="<%= sort_tasks_path %>">
        <%= render @tasks %>
    </ul>
<% else %>
  <p id="tasks" class="text-center"> No tasks yet!</p>
<% end %>
