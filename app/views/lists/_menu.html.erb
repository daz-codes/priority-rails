<div data-controller="menu" class="relative w-full sm:w-auto sm:inline-block">
  <button data-action="click->menu#toggle" class="font-brand text-xl w-full sm:w-auto sm:px-12 py-1 rounded-full bg-white border border-gray-200 hover:border-green-400 hover:bg-green-50 transition-all duration-100 cursor-pointer">
    PR<span class="text-brand-blue">!</span>OR<span class="text-brand-green">!</span>TY<span class="text-brand-red">!</span>
  </button>

  <div data-menu-target="modal" hidden class="fixed left-1/2 -translate-x-1/2 mt-2 w-72 bg-white rounded-xl shadow-lg border border-gray-200 z-50 overflow-hidden">
    <div class="p-3 border-b border-gray-100">
      <input data-menu-target="input"
             data-action="keydown->menu#createList"
             type="text"
             placeholder="New list..."
             class="w-full px-3 py-2 rounded-lg border border-gray-200 text-sm focus:outline-none focus:border-green-400 focus:ring-1 focus:ring-green-400">
    </div>

    <ul class="list-none p-0 m-0 max-h-64 overflow-y-auto">
      <%= render Current.user.lists %>
    </ul>

    <div class="p-3 border-t border-gray-100">
      <%= button_to session_path, method: :delete, class: "inline-flex w-full" do %>
        <span class="inline-flex items-center justify-center gap-1.5 w-full px-4 py-1.5 rounded-full border border-gray-300 text-sm font-semibold text-gray-600 hover:bg-gray-100 hover:text-gray-800 transition-all duration-100 cursor-pointer">
          <i class="fa-solid fa-right-from-bracket text-xs"></i> Sign Out
        </span>
      <% end %>
    </div>
  </div>
</div>
