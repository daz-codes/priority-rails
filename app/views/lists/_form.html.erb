<%= form_with(model: list, class: "space-y-3") do |form| %>
    <%= form.text_field :name, placeholder: "What is the name of your list?", class: "w-full p-2 border border-gray-300 rounded" %>
    <%= form.submit class: "bg-sky-400 text-white border-sky-400 px-4 py-2 rounded-full cursor-pointer hover:bg-sky-500 transition-all duration-100 font-semibold" %>
<% end %>
