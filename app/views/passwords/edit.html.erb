<div class="col-start-1 sm:col-start-2">
<h1 class="text-2xl font-heading font-bold mb-4">Update your password</h1>

<%= tag.div(flash[:alert], class: "text-red-600") if flash[:alert] %>

<%= form_with url: password_path(params[:token]), method: :put, class: "space-y-3" do |form| %>
  <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter new password", maxlength: 72, class: "w-full p-2 border border-gray-300 rounded" %><br>
  <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Repeat new password", maxlength: 72, class: "w-full p-2 border border-gray-300 rounded" %><br>
  <%= form.submit "Save", class: "bg-brand-blue text-white border-brand-blue px-4 py-2 rounded cursor-pointer hover:bg-blue-700" %>
<% end %>
</div>
